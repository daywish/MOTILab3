@model IEnumerable<MOTILab3.Models.PlayersArmour>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ArmourName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArmourPhysicalResistance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArmourMagicalResistance)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ArmourName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArmourPhysicalResistance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArmourMagicalResistance)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ArmourId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ArmourId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ArmourId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
